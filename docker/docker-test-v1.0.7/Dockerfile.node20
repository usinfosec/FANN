# Test with Node.js 20
FROM node:20-alpine

# Install essential packages
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    sqlite \
    bash

WORKDIR /app

# Install ruv-swarm from npm  
RUN npm install --no-cache ruv-swarm@1.0.7

# Copy test scripts (same as main Dockerfile)
COPY <<EOF test-basic.js
#!/usr/bin/env node

async function testBasic() {
  console.log('ðŸ§ª Testing ruv-swarm v1.0.7 with Node.js 20...\n');
  
  try {
    // Test module import
    const RuvSwarm = require('ruv-swarm');
    console.log('âœ… Module import successful');
    
    // Test basic initialization
    const swarm = await RuvSwarm.initialize({ enableSIMD: false });
    console.log('âœ… Initialization successful');
    
    // Test version
    console.log(\`ðŸ“¦ Version: \${RuvSwarm.getVersion()}\`);
    
    console.log('\nðŸŽ‰ Node.js 20 compatibility test passed!');
  } catch (error) {
    console.error('âŒ Test failed:', error.message);
    process.exit(1);
  }
}

testBasic();
EOF

RUN chmod +x test-basic.js

CMD ["node", "test-basic.js"]